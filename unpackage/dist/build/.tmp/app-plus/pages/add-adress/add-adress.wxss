
page {
	background: #f9f9f9;
}
.add-adress {
	width: 100%;
	height: 100%;
	background: #FFFFFF;
}
.add-adress view {
	height: 100rpx;
	line-height: 100rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	padding: 0 15px;
	border-top: 1px solid #E2E2E2;
}
.add-adress view label {
	color: #333333;
	width: 25%;
	font-size: 30rpx;
}
.add-adress view input {
	height: 100%;
}
.textarea {
	height: 170rpx;
}
.textarea textarea {
	width: 100%;
	padding-top: 15px;
}


