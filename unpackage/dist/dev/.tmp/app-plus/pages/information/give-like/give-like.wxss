.collection {
	width: 100%;
	height: 100%;
	border-top: 1px solid #E2E2E2;
}
.collection-list {
	height: auto;
	box-sizing: border-box;
	padding: 0rpx 30rpx;
}
.details-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 28rpx 0;
	width: 100%;
	border-bottom: 1px solid #E2E2E2;
}
.left {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	position: relative;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.left text {
	display: block;
}
.name {
	font-size: 28rpx;
	color: #333333;
	/* display: inline-block; */
}
.time {
	font-size: 24rpx;
	color: #999999;
}
.follow {
	font-size: 26rpx;
	color: #666666;
}
.avatar {
	width: 100rpx;
	height: 100rpx;
	display: inline-block;
	margin-right: 10px;
}
.avatar image {
	width: 100%;
	height: 100%;
	margin: auto;
	display: block;
	border-radius: 50%;
}
.details image {
	width: 94rpx;
	height: 31rpx;
	display: block;
	position: absolute;
	left: 0;
	bottom: 0;
}
.details view {
	margin-top: 10rpx;
}
.right image, .right video {
	width: 170rpx;
	height: 130rpx;
	display: block;
	/* margin-top: 25%; */
}
