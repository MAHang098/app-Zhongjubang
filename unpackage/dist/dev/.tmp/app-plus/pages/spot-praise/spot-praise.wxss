
.collection {
	width: 100%;
	height: 100%;
}
.collection-list {
	height: 188rpx;
	box-sizing: border-box;
	padding: 28rpx 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-top: 1px solid #E2E2E2;
}
.left {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.left text {
	display: block;
}
.name {
	font-size: 28rpx;
	color: #333333;
	float: left;
	/* display: inline-block; */
}
.time {
	font-size: 24rpx;
	color: #999999;
}
.follow {
	font-size: 26rpx;
	color: #666666;
}
.avatar {
	width: 122rpx;
	height: 130rpx;
	display: inline-block;
}
.avatar image {
	width: 100%;
	height: 100%;
	margin: auto;
	display: block;
}
.details image {
	width: 94rpx;
	height: 31rpx;
	display: block;
	float: right;
	margin-top: 2%;
	margin-left: 7px;
}
.right image {
	width: 170rpx;
	height: 130rpx;
	display: block;
	/* margin-top: 25%; */
}

